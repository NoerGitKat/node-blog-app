html
	head
		title View All Posts
		link(rel="stylesheet", href="../css/style.css")
		link(rel="stylesheet", href="../css/posts.css")
	body
		div.container
			header
				a#logout(href="/logout") Logout
				a(href="/") Home
				a(href="/profile") My Profile
				a(href="/myposts") View My Posts
				a(href="/newpost") Create New Posts
			main
				h1 Look at these here beautiful posts!
				div.postcontainer
					each post in posts
						each user in users
							if post.userId == user.id
								p.title #{user.username} wrote "#{post.title}"
								p.body #{post.body}
								br
								//- p.comment #{user.username} commented: #{comment.body}
								form#commentform(method="POST" action="/comment")
									textarea.comment(type="text" name="comment" placeholder="My nice comment...")
									input(type='hidden' name='postId' value='post.id')
									input.commentbutton(type="submit" name="submit" value="Comment!")
								br
			footer
